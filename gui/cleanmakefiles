#! /bin/bash
#
# cleanmakefiles -- remove Makefiles created from *.pro files
#
# (c) 2024 Prof Dr Andreas Müller
#
find . -name \*.pro -print | while read profile
do
	d=`dirname $profile`
	if [ -f ${d}/Makefile ]
	then
		if grep -q 'Generated by qmake' ${d}/Makefile
		then
			rm $d/Makefile
		else
			echo "Makefile not generated from ${profile}, skipping"
		fi
	fi
done

