QT       += core gui widgets

TEMPLATE = lib
CONFIG += staticlib

QMAKE_MAC_SDK = @MACSDK@

QMAKE_CXXFLAGS += @EXTRA_CXXFLAGS@
QMAKE_LFLAGS += @EXTRA_LDFLAGS@

# Directories for the astrophotography library
ASTROPATH = @ASTROPATH@
ASTROLIBDIR = @ASTROLIBDIR@

LIBS += -L$${ASTROLIBDIR} -lastro

INCLUDEPATH += $${ASTROPATH}/include
INCLUDEPATH += /usr/local/include

FORMS    +=								\
	catalogdialog.ui						\
	configurationwidget.ui						\
	imagedisplaywidget.ui						\
	skydisplaydialog.ui

WIDGETSOURCES =								\
	catalogdialog.cpp						\
	configurationwidget.cpp						\
	imagedisplaywidget.cpp						\
	skydisplaydialog.cpp

WIDGETHEADERS =								\
	catalogdialog.h							\
	configurationwidget.h						\
	imagedisplaywidget.h						\
	skydisplaydialog.h

SOURCES += 								\
	AutoGain.cpp							\
	BusyWidget.cpp							\
	ChannelData.cpp							\
	ChannelDisplayWidget.cpp					\
	ChannelPainter.cpp						\
	ClockWidget.cpp							\
	ColorArithmetic.cpp						\
	ColorRectangles.cpp						\
	DeepSkyRetriever.cpp						\
	FitsTable.cpp							\
	FocusPoints.cpp							\
	FocusPointsWidget.cpp						\
	HideProgress.cpp						\
	HideWidget.cpp							\
	Histogram.cpp							\
	HourAngleWidget.cpp						\
	Image2Pixmap.cpp						\
	ImagerRectangle.cpp						\
	LocalSiderealTime.cpp						\
	LocalTimeWidget.cpp						\
	LogSpinBox.cpp							\
	OffsetDial.cpp							\
	RotateDial.cpp							\
	Scaler.cpp							\
	SelectableImage.cpp						\
	SkyDisplayWidget.cpp						\
	SkyDrawing.cpp							\
	SkyStarThread.cpp						\
	StarChartLegend.cpp						\
	StarChartRetriever.cpp						\
	StarChartWidget.cpp						\
	$${WIDGETSOURCES}

HEADERS  += 								\
	AutoGain.h							\
	BusyWidget.h							\
	ChannelData.h							\
	ChannelDisplayWidget.h						\
	ClockWidget.h							\
	ColorArithmetic.h						\
	ColorRectangles.h						\
	FitsTable.h							\
	FocusPoints.h							\
	FocusPointsWidget.h						\
	HideProgress.h							\
	HideWidget.h							\
	Histogram.h							\
	HourAngleWidget.h						\
	Image2Pixmap.h							\
	ImagerRectangle.h						\
	LocalSiderealTime.h						\
	LocalTimeWidget.h						\
	LogSpinBox.h							\
	OffsetDial.h							\
	RotateDial.h							\
	Scaler.h							\
	SelectableImage.h						\
	SkyDisplayWidget.h						\
	SkyDrawing.h							\
	StarChartLegend.h						\
	StarChartWidget.h						\
	$${WIDGETHEADERS}



