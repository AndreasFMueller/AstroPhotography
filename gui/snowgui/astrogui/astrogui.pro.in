QT       += core gui widgets

TEMPLATE = lib
CONFIG += staticlib

QMAKE_CXXFLAGS += @EXTRA_CXXFLAGS@
QMAKE_LFLAGS += @EXTRA_LDFLAGS@

# Directories for the astrophotography library
ASTROPATH = @ASTROPATH@
ASTROLIBDIR = @ASTROLIBDIR@

LIBS += -L$${ASTROLIBDIR} -lastro

INCLUDEPATH += $${ASTROPATH}/include
INCLUDEPATH += /usr/local/include

FORMS    +=								\
	imagedisplaywidget.ui

WIDGETSOURCES =								\
	imagedisplaywidget.cpp

WIDGETHEADERS =								\
	imagedisplaywidget.h

SOURCES += 								\
	AutoGain.cpp							\
	ChannelData.cpp							\
	ChannelDisplayWidget.cpp					\
	ChannelPainter.cpp						\
	ColorArithmetic.cpp						\
	ColorRectangles.cpp						\
	FitsTable.cpp							\
	FocusPoints.cpp							\
	FocusPointsWidget.cpp						\
	Histogram.cpp							\
	Image2Pixmap.cpp						\
	LogSpinBox.cpp							\
	Scaler.cpp							\
	SelectableImage.cpp						\
	$${WIDGETSOURCES}

HEADERS  += 								\
	AutoGain.h							\
	ChannelData.h							\
	ChannelDisplayWidget.h						\
	ColorArithmetic.h						\
	ColorRectangles.h						\
	FitsTable.h							\
	FocusPoints.h							\
	FocusPointsWidget.h						\
	Histogram.h							\
	Image2Pixmap.h							\
	LogSpinBox.h							\
	Scaler.h							\
	SelectableImage.h						\
	$${WIDGETHEADERS}



