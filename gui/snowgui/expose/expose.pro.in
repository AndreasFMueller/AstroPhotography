QT       += core gui widgets

TEMPLATE = lib
CONFIG += staticlib
QMAKE_CXXFLAGS += @EXTRA_CXXFLAGS@
QMAKE_LFLAGS += @EXTRA_LDFLAGS@

# Directories for ICE and the astrophotography library
ICEDIR = @ICEDIR@
ICELIBS = @ICELIBS@
ASTROPATH = @ASTROPATH@
ASTROLIBDIR = @ASTROLIBDIR@


LIBS += -L$${ASTROLIBDIR} -lastro
LIBS += -liceastro
LIBS +=	@ICELIBS@

INCLUDEPATH += $${ASTROPATH}/include
INCLUDEPATH += $${ICEDIR}/include
INCLUDEPATH += /usr/local/include
INCLUDEPATH += ../icegui ../astrogui

FORMS    +=								\
	exposedownloaddialog.ui						\
	exposewindow.ui							\
	exposewidget.ui

WIDGETSOURCES =								\
	exposedownloaddialog.cpp					\
	exposewindow.cpp						\
	exposewidget.cpp

WIDGETHEADERS =								\
	exposedownloaddialog.h						\
	exposewindow.h							\
	exposewidget.h

SOURCES += 								\
	downloadthread.cpp						\
	RepositorySection.cpp						\
	$${WIDGETSOURCES}

HEADERS  += 								\
	downloadthread.h						\
	RepositorySection.h						\
	$${WIDGETHEADERS}



