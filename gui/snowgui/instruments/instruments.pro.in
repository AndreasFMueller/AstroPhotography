QT       += core gui widgets

TEMPLATE = lib
CONFIG += staticlib
QMAKE_CXXFLAGS += @EXTRA_CXXFLAGS@
QMAKE_LFLAGS += @EXTRA_LDFLAGS@

#Â QMAKE_MAC_SDK = @MACSDK@

# Directories for ICE and the astrophotography library
ICEDIR = @ICEDIR@
ICELIBS = @ICELIBS@
ASTROPATH = @ASTROPATH@
ASTROLIBDIR = @ASTROLIBDIR@
LOCALPATH = @LOCALPATH@

LIBS += -L$${ASTROLIBDIR} -lastro
LIBS += -liceastro
LIBS +=	@ICELIBS@

INCLUDEPATH += $${ASTROPATH}/include
INCLUDEPATH += $${ICEDIR}/include
INCLUDEPATH += $${LOCALPATH}/include
INCLUDEPATH += ../astrogui ../icegui

FORMS    +=								\
	instrumentdisplay.ui						\
	instrumentswindow.ui						\
	modulesdisplay.ui

WIDGETSOURCES =								\
	instrumentdisplay.cpp						\
	instrumentswindow.cpp						\
	modulesdisplay.cpp

WIDGETHEADERS =								\
	instrumentdisplay.h						\
	instrumentswindow.h						\
	modulesdisplay.h

SOURCES += 								\
	$${WIDGETSOURCES}


HEADERS  += 								\
	$${WIDGETHEADERS}



