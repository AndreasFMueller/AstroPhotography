QT       += core gui widgets

TEMPLATE = lib
CONFIG += staticlib

# Directories for ICE and the astrophotography library
ICEDIR = @ICEDIR@
ASTROPATH = @ASTROPATH@

LIBS += -L$${ASTROPATH}/lib -lastro -liceastro
LIBS +=	@ICELIBS@

INCLUDEPATH += $${ASTROPATH}/include
INCLUDEPATH += $${ICEDIR}/include

FORMS    +=								\
	imagedisplaywidget.ui						\
	ccdcontrollerwidget.ui						\
	focusercontrollerwidget.ui					\
	coolercontrollerwidget.ui

WIDGETSOURCES =								\
	imagedisplaywidget.cpp						\
	ccdcontrollerwidget.cpp						\
	focusercontrollerwidget.cpp					\
	coolercontrollerwidget.cpp

WIDGETHEADERS =								\
	ccdcontrollerwidget.h						\
	imagedisplaywidget.h						\
	focusercontrollerwidget.h					\
	coolercontrollerwidget.h	

SOURCES += 								\
	Image2Pixmap.cpp						\
	Histogram.cpp							\
	AutoGain.cpp							\
	SelectableImage.cpp						\
	InstrumentWidget.cpp						\
	$${WIDGETSOURCES}


HEADERS  += 								\
	Image2Pixmap.h							\
	Histogram.h							\
	AutoGain.h							\
	SelectableImage.h						\
	InstrumentWidget.h						\
	$${WIDGETHEADERS}



