QT       += core gui widgets

TEMPLATE = lib
CONFIG += staticlib

# Directories for ICE and the astrophotography library
ICEDIR = /Library/Developer/Ice-3.5.1
ASTROPATH = /Users/afm/Projects/AstroPhotography/snowgui/../control/root

