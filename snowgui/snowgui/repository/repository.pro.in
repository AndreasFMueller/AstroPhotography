QT       += core gui widgets

TEMPLATE = lib
CONFIG += staticlib
QMAKE_CXXFLAGS += @EXTRA_CXXFLAGS@
QMAKE_LFLAGS += @EXTRA_LDFLAGS@

# Directories for ICE and the astrophotography library
ICEDIR = @ICEDIR@
ICELIBS = @ICELIBS@
ASTROPATH = @ASTROPATH@
ASTROLIBDIR = @ASTROLIBDIR@


LIBS += -L$${ASTROLIBDIR} -lastro -liceastro
LIBS +=	@ICELIBS@

INCLUDEPATH += $${ASTROPATH}/include
INCLUDEPATH += $${ICEDIR}/include
INCLUDEPATH += /usr/local/include
INCLUDEPATH += ../common

FORMS    +=								\
	repositorysavedialog.ui						\
	repositorywindow.ui	

WIDGETSOURCES =								\
	repositorysavedialog.cpp					\
	repositorywindow.cpp						\
	savethread.cpp

WIDGETHEADERS =								\
	repositorysavedialog.h						\
	repositorywindow.h						\
	savethread.h

SOURCES += 								\
	$${WIDGETSOURCES}

HEADERS  += 								\
	$${WIDGETHEADERS}



