QT       += core gui widgets

TEMPLATE = lib
CONFIG += staticlib
QMAKE_CXXFLAGS += @EXTRA_CXXFLAGS@
QMAKE_LFLAGS += @EXTRA_LDFLAGS@

# Directories for ICE and the astrophotography library
ICEDIR = @ICEDIR@
ICELIBS = @ICELIBS@
ASTROPATH = @ASTROPATH@
ASTROLIBDIR = @ASTROLIBDIR@

LIBS += -L$${ASTROLIBDIR} -lastro
LIBS += -liceastro
LIBS +=	$${ICELIBS} -lIce -lIceUtil

INCLUDEPATH += $${ASTROPATH}/include
INCLUDEPATH += $${ICEDIR}/include
INCLUDEPATH += ../common ../astrogui

FORMS    +=								\
	previewwindow.ui

SOURCES += 								\
	previewwindow.cpp 						\
	PreviewImageSink.cpp

HEADERS  += 								\
	previewwindow.h							\
	PreviewImageSink.h				

