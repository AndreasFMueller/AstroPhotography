QT       += core gui widgets

TEMPLATE = lib
CONFIG += staticlib
QMAKE_CXXFLAGS += @EXTRA_CXXFLAGS@
QMAKE_LFLAGS += @EXTRA_LDFLAGS@

# Directories for ICE and the astrophotography library
ICEDIR = @ICEDIR@
ICELIBS = @ICELIBS@
ASTROPATH = @ASTROPATH@
ASTROLIBDIR = @ASTROLIBDIR@

LIBS += -L$${ASTROLIBDIR} -lastro -liceastro
LIBS +=	$${ICELIBS} -lIce -lIceUtil

INCLUDEPATH += $${ASTROPATH}/include
INCLUDEPATH += $${ICEDIR}/include
INCLUDEPATH += /usr/local/include
INCLUDEPATH += ../common

FORMS    +=								\
	browserwindow.ui						\
	markingmethoddialog.ui

WIDGETSOURCES =								\
	browserwindow.cpp						\
	markingmethoddialog.cpp

WIDGETHEADERS =								\
	browserwindow.h							\
	markingmethoddialog.h

SOURCES += 								\
	$${WIDGETSOURCES}

HEADERS  += 								\
	$${WIDGETHEADERS}

