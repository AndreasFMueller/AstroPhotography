QT       += core gui widgets

TEMPLATE = lib
CONFIG += staticlib

# Directories for ICE and the astrophotography library
ICEDIR = @ICEDIR@
ICELIBS = @ICELIBS@
ASTROPATH = @ASTROPATH@
ASTROLIBDIR = @ASTROLIBDIR@


LIBS += -L$${ASTROLIBDIR} -lastro -liceastro
LIBS +=	@ICELIBS@

INCLUDEPATH += $${ASTROPATH}/include
INCLUDEPATH += $${ICEDIR}/include
INCLUDEPATH += /usr/local/include

FORMS    +=								\
	instrumentdisplay.ui						\
	instrumentswindow.ui						\
	modulesdisplay.ui

WIDGETSOURCES =								\
	instrumentdisplay.cpp						\
	instrumentswindow.cpp						\
	modulesdisplay.cpp

WIDGETHEADERS =								\
	instrumentdisplay.h						\
	instrumentswindow.h						\
	modulesdisplay.h

SOURCES += 								\
	$${WIDGETSOURCES}


HEADERS  += 								\
	$${WIDGETHEADERS}



